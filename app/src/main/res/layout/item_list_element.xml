<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/normalMargin"
    android:layout_marginBottom="@dimen/normalMargin"
    app:cardCornerRadius="@dimen/normalMargin"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/halfMargin"
    app:cardPreventCornerOverlap="false"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_margin="@dimen/normalMargin"
        android:background="?android:attr/selectableItemBackground"

        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalMargin" />

        <ImageView
            android:id="@+id/cardImageView"

            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@android:drawable/ic_input_delete" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalMargin"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/halfMargin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_sizes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/halfMargin"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/item_bground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BC9F9F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/halfMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_warehouse_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>